<mvc:View
    controllerName="com.sap.myshop.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <NavContainer
                id="navContainer"
                initialPage="masterPage"
                height="100%"
            >
                <!-- Master Page with Product List -->
                <Page
                    id="masterPage"
                    title="Products"
                >
                    <content>
                        <List
                            headerText="Products"
                            headerLevel="H2"
                            items="{/Products}"
                            mode="SingleSelectMaster"
                            selectionChange="onProductSelect"
                        >
                            <ObjectListItem
                                title="{name}"
                                icon="{img}"
                                number="{price} INR"
                                intro="{description}"
                            >
                                <firstStatus>
                                    <ObjectStatus text="{quantity} in stock" state="{path: 'quantity', formatter: '.stockStatusColor'}" />
                                </firstStatus>
                                <secondStatus>
                                    <ObjectStatus text="{= ${quantity} > 0 ? 'In Stock' : 'Out of Stock'}" state="{path: 'quantity', formatter: '.stockStatusColor'}" />
                                </secondStatus>
                            </ObjectListItem>
                        </List>
                    </content>
                </Page>

                <!-- Detail Page -->
                <Page
                    id="detailPage"
                    title="{selectedProduct>name}"
                    showNavButton="true"
                    navButtonPress="onBackPress"
                >
                    <content>
                        <!-- Display Product Details Here -->
                        <ObjectHeader
                            title="{selectedProduct>name}"
                            intro="{selectedProduct>description}"
                            icon="{selectedProduct>img}"
                        />
                        <!-- Add more ObjectAttributes or controls for additional details -->
                        <ObjectAttribute text="{selectedProduct>price} INR" />
                        <!-- Additional details... -->
                    </content>
                </Page>
            </NavContainer>
        </content>
    </Page>
</mvc:View>
